@model List<BookStore.Models.PRODUCT>

@foreach (var i in Model)
{
    <div class="col-lg-3 col-md-6">

        <div class="item">
            <a href="#"><img src="~/Content/images/@i.img" alt="img"></a>
            <h3>@i.name</h3>
            <h6><span class="price"></span> / <a href="/san-pham/@ViewBag.meta/@i.idproduct">Listen Now</a></h6>
            <div class="hover">
                <a href="/san-pham/@ViewBag.meta/@i.idproduct">
                    <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                </a>
            </div>
        </div>
    </div>
}