@model IEnumerable<BookStore.Models.PRODUCT>

<section class="recomended-sec">
    <div class="container">
        <div class="title">
            <h2>highly recommendes books</h2>
            <hr>
        </div>
        <div class="row">
            @foreach (var i in Model.Take(4))
            {
                <div class="col-lg-3 col-md-6">
                    
                    <div class="item">
                        <a href="#"><img src="~/Content/images/@i.img" alt="img"></a>
                        <h3>@i.name</h3>
                        <h6><span class="price"></span> / <a href="/@ViewBag.meta/@i.meta/@i.idproduct">Listen Now</a></h6>
                        <div class="hover">
                            <a href="/@ViewBag.meta/@i.meta/@i.idproduct">
                                <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

