<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Book Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#03a6f3">
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:200,300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/styles.css">
</head>

<body>
    <header>
        <div class="header-top">
            <div class="container">
                <div class="row">
                    <div class="col-md-3"><a href="/admin" class="web-url">www.bookstore.com</a></div>
                    <div class="col-md-6">
                        <h5>Truyền bá văn hóa đọc sách đến mọi người</h5>
                    </div>
                    <div class="col-md-3">
                        <span class="ph-number">Call : 0911655922</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="main-menu">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="navbar-brand" href="index.html"><img src="~/Content/images/logo.png" alt="logo"></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            @{Html.RenderAction("getMenu", "Temp");}


                            @if (Session["iduser"] == null || Session["iduser"].ToString() == "")
                            {
                                <li class="navbar-item active">
                                    <a href="/login" class="nav-link">Đăng nhập</a>
                                </li>
                                <li class="navbar-item active">
                                    <a href="/register" class="nav-link">Đăng kí</a>
                                </li>
                            }
                            else
                            {
                                BookStore.Models.USER user = (BookStore.Models.USER)Session["KhachHang"];
                                <li class="navbar-item active">
                                    <a href="/collection" class="nav-link">Bộ sưu tập</a>
                                </li>
                                <li class="navbar-item active">
                                    <a href="#" class="nav-link">Chào @Session["username"].ToString()&ensp;</a>
                                </li>
                                <li class="navbar-item active">
                                    <a href="@Url.Action("LogOut","Login")" class="nav-link">Đăng xuất</a>
                                </li>
                            }



                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>
    @RenderBody()
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="address">
                        <h4>Our Address</h4>
                        <h6>
                            The BookStore Theme, 190/5
                            Linh Trung Thủ Đức, TP.HCM
                        </h6>
                        <h6>Call : 0911655922</h6>
                        <h6>Email : info@bookstore.com</h6>
                    </div>
                    <div class="timing">
                        <h4>Timing</h4>
                        <h6>Mon - Fri: 7am - 10pm</h6>
                        <h6>​​Saturday: 8am - 10pm</h6>
                        <h6>​Sunday: 8am - 11pm</h6>
                    </div>
                </div>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3918.369149735394!2d106.77417031526069!3d10.85950206062318!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752777347e1c49%3A0x222e5c1b8bc574b9!2zMTkwIExpbmggVHJ1bmcsIFBoxrDhu51uZyBMaW5oIFRydW5nLCBUaOG7pyDEkOG7qWMsIEjhu5MgQ2jDrSBNaW5oLCBWaeG7h3QgTmFt!5e0!3m2!1svi!2s!4v1592572851058!5m2!1svi!2s" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
            </div>
        </div>
        <div class="copy-right">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <h5>(C) 2017. All Rights Reserved. BookStore Wordpress Theme</h5>
                    </div>
                    <div class="col-md-6">
                        <div class="share align-middle">
                            <span class="fb"><i class="fa fa-facebook-official"></i></span>
                            <span class="instagram"><i class="fa fa-instagram"></i></span>
                            <span class="twitter"><i class="fa fa-twitter"></i></span>
                            <span class="pinterest"><i class="fa fa-pinterest"></i></span>
                            <span class="google"><i class="fa fa-google-plus"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/js/owl.carousel.min.js"></script>
    <script src="~/Scripts/js/custom.js"></script>
</body>
</html>