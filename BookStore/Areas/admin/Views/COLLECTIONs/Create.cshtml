@model BookStore.Models.COLLECTION

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/admin/Views/Shared/Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "COLLECTIONs", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>COLLECTION</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.iduser, "iduser", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("iduser", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.iduser, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idproduct, "idproduct", htmlAttributes: new { @class = "control-label col-md-2" })
